{
  "tsx": {
    "typeCheck": false,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node"
    }
  },
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "customConditions": [
      "react-native"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "baseUrl": "./src",
    "paths": {
      "Components/*": [
        "./Components/*"
      ],
      "Dimensions/*": [
        "./Dimensions/*"
      ],
      "Generics/*": [
        "./Generics/*"
      ],
      "Hooks/*": [
        "./Hooks/*"
      ],
      "Icons/*": [
        "./Icons/*"
      ],
      "Models/*": [
        "./Models/*"
      ],
      "Root/*": [
        "./Root/*"
      ],
      "Routing/*": [
        "./Routing/*"
      ],
      "Screens/*": [
        "./Screens/*"
      ],
      "Shapes/*": [
        "./Shapes/*"
      ],
      "State/*": [
        "./State/*"
      ],
      "Styles/*": [
        "./Styles/*"
      ],
      "Themes/*": [
        "./Themes/*"
      ],
      "Tools/*": [
        "./Tools/*"
      ],
      "Types/*": [
        "./Types/*"
      ]
    }
  },
  "include": [
    "src",
    "ci",
    "cd",
    ".eslintrc.js",
    "**/*.json",
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "__Stealth__",
    "coverage",
    "dist",
    "node_modules"
  ]
}